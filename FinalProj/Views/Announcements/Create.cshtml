@model FinalProj.Models.Announcement

@{
    ViewData["Title"] = "Create";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    DateTime DateAndTime = DateTime.Now;
}

@*<h1>Create</h1>

<h4>Announcement</h4>
<hr />*@
<div class="row">
    <div class="col-md-12">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModal-label">Add Note</h4>
                </div>
                <div class="modal-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Body" class="control-label"></label>
                            <textarea asp-for="Body" class="form-control" cols="30" rows="5"></textarea>
                            <span asp-validation-for="Body" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="Date" value="@DateAndTime" />
                        <input type="hidden" asp-for="OwnerID" value="@ViewData["OwnerID"]" />

                        <div class="modal-footer ">
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <button type="button" class="btn btn-default" id="reset" data-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

