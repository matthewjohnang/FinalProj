@model IEnumerable<FinalProj.Models.Feedback>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ int rowNo = 0; }
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<br />
<h1 class="text-center">Sent Messages</h1>
<hr />
<button type="button" class="btn-block btn btn-primary float-right" style="width:auto; "><b>+</b> Message</button>
<br />
<br />
<br />


<div id="myModal" class="modal" data-url='@Url.Action("Create","Feedbacks")'>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('.btn-block').click(function () {
            var url = $('#myModal').data('url');
            $.get(url, function (data) {
                $("#myModal").html(data);
                $("#myModal").modal('show');
            });
        });
    });
</script>

<table class="table">
    <thead>
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.ID)
                </th>*@
            <th>
                Number
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th>
                Actions
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Owner)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>*@
                <td>
                    @(rowNo += 1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Body)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Owner.Id)
                    </td>*@
                <td>
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

